  \renewcommand{\inote}[1]{}
  \renewcommand{\iquestion}[1]{}
  \renewcommand{\ireply}[1]{}
  \renewcommand{\itodo}[1]{}
  \renewcommand{\iwarning}[1]{}
  \renewcommand{\citemissing}{}
  \renewcommand{\refmissing}{}
}
